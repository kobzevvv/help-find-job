{
  "name": "telegram-resume-matcher-bot",
  "version": "1.0.0",
  "description": "AI-powered Telegram bot that analyzes how well your resume matches job descriptions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "prebuild": "npm run clean:dist && npm run type-check",
    "build": "tsc",
    "build:ci": "npm run prebuild && npm run build",
    "build:dry": "npm run build:ci && wrangler deploy --dry-run",
    "deploy:dev": "npm run build:ci && wrangler deploy --env development",
    "deploy:staging": "npm run build:ci && wrangler deploy --env staging",
    "deploy:prod": "npm run build:ci && wrangler deploy --env production",
    "deploy:safe": "bash scripts/deploy-safely.sh",
    "deploy:safe:staging": "bash scripts/deploy-safely.sh staging",
    "deploy:safe:prod": "bash scripts/deploy-safely.sh production",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config jest.config.unit.js --passWithNoTests",
    "test:integration": "jest --config jest.config.integration.js --passWithNoTests",
    "test:e2e": "npm run build:ci && jest --config jest.config.e2e.js --passWithNoTests",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --config jest.config.unit.js --coverage --passWithNoTests",
    "test:watch": "jest --config jest.config.unit.js --watch",
    "test:watch:integration": "jest --config jest.config.integration.js --watch",
    "test:watch:e2e": "jest --config jest.config.e2e.js --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "setup": "npm install && npm run setup:env && npm run setup:wrangler",
    "setup:env": "cp env.template .env && echo 'Please fill in your credentials in .env'",
    "setup:wrangler": "wrangler auth login",
    "logs": "wrangler tail",
    "logs:dev": "wrangler tail --env development",
    "logs:prod": "wrangler tail --env production",
    "metrics": "wrangler analytics",
    "health-check": "curl https://your-worker-name.your-subdomain.workers.dev/health",
    "webhook:set": "node scripts/set-webhook.js",
    "webhook:delete": "node scripts/delete-webhook.js",
    "webhook:info": "node scripts/webhook-info.js",
    "validate:migration": "node scripts/validate-migration.js",
    "validate:container": "node scripts/validate-container.js",
    "validate:staging": "npm run validate:migration && npm run validate:container",
    "clean": "rm -rf dist node_modules coverage .nyc_output",
    "clean:dist": "rm -rf dist",
    "clean:deps": "rm -rf node_modules package-lock.json",
    "clean:all": "npm run clean",
    "precommit": "npm run type-check && npm run lint && npm run test",
    "postinstall": "npm run type-check",
    "prepare": "husky",
    "dev:debug": "wrangler dev --inspect",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "fix:linting": "node scripts/fix-linting-issues.js",
    "setup:dev": "npm install && npm run prepare && npm run quality:fix"
  },
  "keywords": [
    "telegram",
    "bot",
    "resume",
    "job",
    "ai",
    "gpt",
    "cloudflare",
    "workers",
    "typescript",
    "career",
    "job-search",
    "cv",
    "matching"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/help-find-job.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/help-find-job/issues"
  },
  "homepage": "https://github.com/yourusername/help-find-job#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230922.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0",
    "wrangler": "^4.34.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "miniflare",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/yourusername"
    },
    {
      "type": "patreon",
      "url": "https://patreon.com/yourusername"
    }
  ],
  "contributors": [
    {
      "name": "Contributors",
      "url": "https://github.com/yourusername/help-find-job/graphs/contributors"
    }
  ]
}
