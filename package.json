{
  "name": "telegram-resume-matcher-bot",
  "version": "1.0.0",
  "description": "AI-powered Telegram bot that analyzes how well your resume matches job descriptions",
  "main": "dist/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc && wrangler deploy --dry-run",
    "deploy:dev": "wrangler deploy --env development",
    "deploy:staging": "wrangler deploy --env staging", 
    "deploy:prod": "wrangler deploy --env production",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "test:e2e": "jest --testPathPattern=e2e --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "setup": "npm install && npm run setup:env && npm run setup:wrangler",
    "setup:env": "cp env.template .env && echo 'Please fill in your credentials in .env'",
    "setup:wrangler": "wrangler auth login",
    "logs": "wrangler tail",
    "logs:dev": "wrangler tail --env development",
    "logs:prod": "wrangler tail --env production",
    "metrics": "wrangler analytics",
    "health-check": "curl https://your-worker-name.your-subdomain.workers.dev/health",
    "webhook:set": "node scripts/set-webhook.js",
    "webhook:delete": "node scripts/delete-webhook.js",
    "webhook:info": "node scripts/webhook-info.js",
    "clean": "rm -rf dist node_modules",
    "precommit": "npm run type-check && npm run lint && npm run test",
    "postinstall": "npm run type-check"
  },
  "keywords": [
    "telegram",
    "bot",
    "resume",
    "job",
    "ai",
    "gpt",
    "cloudflare",
    "workers",
    "typescript",
    "career",
    "job-search",
    "cv",
    "matching"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/help-find-job.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/help-find-job/issues"
  },
  "homepage": "https://github.com/yourusername/help-find-job#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@cloudflare/workers-types": "^4.20230922.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "wrangler": "^4.34.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.16"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "miniflare",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "env": {
      "node": true,
      "es2022": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/yourusername"
    },
    {
      "type": "patreon",
      "url": "https://patreon.com/yourusername"
    }
  ],
  "contributors": [
    {
      "name": "Contributors",
      "url": "https://github.com/yourusername/help-find-job/graphs/contributors"
    }
  ]
}
